# GrowWiz Environment Configuration
# Copy this file to .env and customize the values for your setup

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Secret key for session management (generate a secure random key)
SECRET_KEY=your-secret-key-here-change-this-in-production

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# Hardware platform (raspberry_pi, generic_linux, windows, macos)
HARDWARE_PLATFORM=raspberry_pi

# Simulation mode (true for development without hardware, false for production)
SIMULATION_MODE=true

# DHT22 temperature/humidity sensor
DHT22_PIN=4

# Soil moisture sensor (analog pin on MCP3008)
SOIL_MOISTURE_PIN=0

# CO2 sensor (I2C address)
CO2_ADDRESS=0x48

# Sensor reading interval (seconds)
READ_INTERVAL=5

# =============================================================================
# THRESHOLD CONFIGURATION
# =============================================================================

# Temperature thresholds (Celsius)
TEMP_MIN=18
TEMP_MAX=30

# Humidity thresholds (percentage)
HUMIDITY_MIN=40
HUMIDITY_MAX=70

# Soil moisture thresholds (percentage)
SOIL_MOISTURE_MIN=30
SOIL_MOISTURE_MAX=80

# CO2 thresholds (PPM)
CO2_MIN=400
CO2_MAX=1000

# =============================================================================
# RELAY/DEVICE CONFIGURATION
# =============================================================================

# Relay pins for devices
FAN_PIN=18
HEATER_PIN=19
HUMIDIFIER_PIN=20
PUMP_PIN=21
LIGHTS_PIN=22
CO2_VALVE_PIN=23

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# Plant classification model
MODEL_NAME=resnet50
CONFIDENCE_THRESHOLD=0.7
MAX_IMAGE_SIZE=1024

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path
DATABASE_PATH=data/growwiz.db
BACKUP_INTERVAL=24

# =============================================================================
# WEB SCRAPING CONFIGURATION
# =============================================================================

# Request delay between scraping requests (seconds)
REQUEST_DELAY=1.0
MAX_PAGES=10

# Scraping keywords (comma-separated)
SCRAPING_KEYWORDS=cannabis,growing,hydroponics,nutrients

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/growwiz.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Email notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API rate limiting
API_RATE_LIMIT=100
ENABLE_API_DOCS=true

# External API keys (if needed)
# OPENAI_API_KEY=your_key_here
# WEATHER_API_KEY=your_key_here